                        .getElementById("nombre");
                    const nombre = inputNombre.value;
                    if (nombre.length < 3) {
                        event.preventDefault()
                        alert('Tu nombre es muy corto')
                    }else{

                    }

                }
            </script>


        </div>
    </div><div class="col-md-4"></div>

</div>
</div>